<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="OffLeash">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" ng-controller="navController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li ng-show="!checkAuth()"><a href="#!/login">Login</a></li>
                    <li ng-show="!checkAuth()"><a href="#!/signup">Register</a></li>
                    <li ng-show="checkAuth()"><a href="#!/home">Home/Search</a></li>
                    <li ng-show="checkAuth()"><a href="#!/contacts">contacts</a></li>
                    <li ng-show="checkAuth()"><a href="#!/favorites">favorites</a></li>
                    <li ng-show="checkAuth()"><a ng-click="logout()">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD3Bbi2S3kDtm8HvRW4DxX1qN3VVf5iUsE&libraries=places" async defer></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")

    @RenderSection("scripts", required: false)
</body>
</html>
